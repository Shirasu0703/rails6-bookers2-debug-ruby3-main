<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
      <th><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr>
    <th>followers</th>
      <th><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
  <tr>
</table>

<div class='row'>
  <% if controller_name == "users" && action_name == "show" %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationship_path(user), method: :delete, class: "btn btn-outline-secondary btn-block" %>
    <% else %>
      <%= link_to "フォローする", user_relationship_path(user), method: :post, class: "btn btn-outline-secondary btn-block" %>
    <% end %>
    <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>